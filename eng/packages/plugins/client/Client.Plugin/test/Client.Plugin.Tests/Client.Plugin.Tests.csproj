    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Client.Plugin.csproj" />
    <ProjectReference Include="..\Client.Plugin.Tests.Common\Client.Plugin.Tests.Common.csproj" />

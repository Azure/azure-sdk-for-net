<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0-beta.1</Version>
    <!--Ensure all dependencies are copied to the output directory so that they can be packaged up for npm.-->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeSpec.Generator.ClientModel" />
  </ItemGroup>

  <!-- Shared visitor source files -->
  <PropertyGroup>
    <VisitorsBasePath>$(MSBuildThisFileDirectory)..\..\..\..\http-client-csharp\generator\Azure.Generator\src\Visitors</VisitorsBasePath>
  </PropertyGroup>

  <ItemDefinitionGroup>
    <SharedVisitorSource>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </SharedVisitorSource>
  </ItemDefinitionGroup>

  <ItemGroup>
    <SharedVisitorSource Include="$(VisitorsBasePath)\NamespaceVisitor.cs">
      <LinkBase>Shared/Visitors</LinkBase>
    </SharedVisitorSource>
    <SharedVisitorSource Include="$(VisitorsBasePath)\SpecialHeadersVisitor.cs">
      <LinkBase>Shared/Visitors</LinkBase>
    </SharedVisitorSource>
    <SharedVisitorSource Include="$(VisitorsBasePath)\ModelFactoryRenamerVisitor.cs">
      <LinkBase>Shared/Visitors</LinkBase>
    </SharedVisitorSource>
    <SharedVisitorSource Include="$(VisitorsBasePath)\Extensions\ConfigurationExtensions.cs">
      <LinkBase>Shared/Visitors/Extensions</LinkBase>
    </SharedVisitorSource>
    <SharedVisitorSource Include="$(VisitorsBasePath)\Utilities\TypeNameUtilities.cs">
      <LinkBase>Shared/Visitors/Utilities</LinkBase>
    </SharedVisitorSource>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="@(SharedVisitorSource)" />
  </ItemGroup>

  <!-- Copy output to package dist path  -->
  <Target Name="CopyForNpmPackage" AfterTargets="Build">
    <Message Text="Copying output to dist path" Importance="high" />
    <ItemGroup>
      <SourceDir Include="$(OutputPath)**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(SourceDir)" DestinationFolder="$(MSBuildThisFileDirectory)..\..\dist\%(RecursiveDir)" />
  </Target>
</Project>

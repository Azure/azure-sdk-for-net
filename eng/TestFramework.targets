<Project>
  <PropertyGroup>
    <SessionRecordTargetFramework>netcoreapp2.1</SessionRecordTargetFramework>
  </PropertyGroup>

  <Target Name="AutoUpdateSessionRecords" Condition="'$(AutoUpdateSessionRecords)' == 'true'" DependsOnTargets="UpdateSessionRecords" AfterTargets="Test;VSTest"/>

  <!-- Support for test recordings -->
  <Target Name="UpdateSessionRecords" Condition="'$(IsTestProject)' == 'true'" Condition="'$(TargetFramework)' == '$(SessionRecordTargetFramework)'">
    <PropertyGroup>
      <SessionRecordsDirectory>SessionRecords</SessionRecordsDirectory>
    </PropertyGroup>
    <ItemGroup>
      <_CopyItems Include="$(OutputPath)\$(SessionRecordTargetFramework)\SessionRecords\**\*.*" />
    </ItemGroup>

    <RemoveDir Directories="$(MSBuildProjectDirectory)\$(SessionRecordsDirectory)" />
    <Copy
      SourceFiles="@(_CopyItems)"
      DestinationFolder="$(MSBuildProjectDirectory)\$(SessionRecordsDirectory)\%(RecursiveDir)"
      SkipUnchangedFiles="true"
      OverwriteReadOnlyFiles="true"
      Retries="3"
      RetryDelayMilliseconds="300"/>
  </Target>

</Project>

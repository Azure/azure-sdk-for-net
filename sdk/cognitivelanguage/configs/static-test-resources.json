{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the resource. By default, this is the same as the resource group."
            }
        }
    },
    "variables": {
        // Use a prefix the same as the common service directory.
        "prefix": "cognitivelanguagesdk",
        "kbname": "[concat(variables('prefix'), 'kb')]",
        "kbversion": "2021-04-01-preview",
        "testname": "[concat(variables('prefix'), 'test')]",
        "testversion": "2021-10-01"
    },
    "resources": [
        {
            "type": "Microsoft.Search/searchServices",
            "apiVersion": "[variables('kbversion')]",
            "name": "[variables('kbname')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "basic"
            },
            "properties": {
                "replicaCount": 1,
                "partitionCount": 1,
                "hostingMode": "Default",
                "publicNetworkAccess": "Enabled",
                "disableLocalAuth": false
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "[variables('testversion')]",
            "name": "[variables('testname')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Search/searchServices', variables('kbname'))]"
            ],
            "sku": {
                "name": "S"
            },
            "kind": "TextAnalytics",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "apiProperties": {
                    "qnaAzureSearchEndpointId": "[resourceId('Microsoft.Search/searchServices', variables('kbname'))]"
                },
                "customSubDomainName": "[variables('testname')]",
                "publicNetworkAccess": "Enabled"
            }
        }
    ],
    "outputs": {
        "CONVERSATIONS_KEY": {
            "type": "string",
            "value": "[listKeys(variables('testname'), variables('testversion')).key1]"
        },
        "CONVERSATIONS_URI": {
            "type": "string",
            "value": "[format('https://{0}.cognitiveservices.azure.com/', variables('testname'))]"
        },
        "QUESTIONANSWERING_ENDPOINT": {
            "type": "string",
            "value": "[format('https://{0}.search.windows.net', variables('kbname'))]"
        },
        "QUESTIONANSWERING_KEY": {
            "type": "string",
            "value": "[listAdminKeys(variables('kbname'), variables('kbversion')).primaryKey]"
        }
    }
}

  </ItemGroup>
  <ItemGroup>
    <None Include="..\samples\README.md" Link="samples\README.md" />
    <None Include="..\samples\Sample1_CommunicationIdentityClient.md" Link="samples\Sample1_CommunicationIdentityClient.md" />

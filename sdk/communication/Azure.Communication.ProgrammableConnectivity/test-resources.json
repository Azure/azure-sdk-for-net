{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "The base resource name."
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "The tenant ID to which the application and resources belong."
            }
        },
        "testApplicationOid": {
            "type": "string",
            "metadata": {
                "description": "The client OID to grant access to test resources."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the resource. By default, this is the same as the resource group."
            }
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "The subscription ID to which the application and resources belong."
            }
        }
    },
    "variables": {
        "secretValue": "Very secret value"
    },
    "resources": [
        {
            "type": "Microsoft.ProgrammableConnectivity/Gateways",
            "name": "[parameters('baseName')]",
            "apiVersion": "2024-01-01-preview",
            "location": "eastus",
            "properties": {
                "sku": "sku-1"
            }
        }
    ],
    "outputs": {
        "APCGatewayBaseUrl": {
            "type": "string",
            "value": "[reference(parameters('baseName')).gatewayBaseUrl]"
        },
        "APCGatewayResourceId": {
            "type": "string",
            "value": "[concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.ProgrammableConnectivity/Gateways/', parameters('baseName'))]"
        }
    }
}
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\Microsoft.Azure.WebJobs.Shared.Storage\Microsoft.Azure.WebJobs.Shared.Storage.projitems" Label="Shared" />
  <PropertyGroup>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup>
    <Version>5.0.0-beta.1</Version>
    <Description>This extension adds bindings for Storage</Description>
    <AssemblyName>Microsoft.Azure.WebJobs.Extensions.Storage</AssemblyName>
    <RootNamespace>Microsoft.Azure.WebJobs.Extensions.Storage</RootNamespace>
  </PropertyGroup>  
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <StyleCopTreatErrorsAsWarnings>false</StyleCopTreatErrorsAsWarnings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>  
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <StyleCopTreatErrorsAsWarnings>false</StyleCopTreatErrorsAsWarnings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.WebJobs" />
  </ItemGroup>

  <ItemGroup>
    <!-- TODO (kasobol-msft) change this to PackageReference when stable -->
    <ProjectReference Include="..\..\..\Azure.Storage.Blobs\src\Azure.Storage.Blobs.csproj" />
    <ProjectReference Include="..\..\..\Azure.Storage.Queues\src\Azure.Storage.Queues.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Azure.Storage.Webjobs.Extensions.Blobs\src\Azure.WebJobs.Extensions.Storage.Blobs.csproj" />
    <ProjectReference Include="..\..\Azure.Storage.Webjobs.Extensions.Queues\src\Azure.WebJobs.Extensions.Storage.Queues.csproj" />
  </ItemGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <PublicSign>false</PublicSign>
    <DelaySign>true</DelaySign>
    <AssemblyName>Microsoft.Azure.WebJobs.Host.TestCommon</AssemblyName>
    <RootNamespace>Microsoft.Azure.WebJobs.Host.TestCommon</RootNamespace>
    <AssemblyOriginatorKeyFile>PublicKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.Storage.Blob" />
    <PackageReference Include="Microsoft.Azure.Storage.Queue" />
    <PackageReference Include="Microsoft.Azure.WebJobs" />
    <PackageReference Include="Microsoft.Extensions.Logging" VersionOverride="2.1.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="xunit" />
  </ItemGroup>

  <Target Name="TestMessage" AfterTargets="Build;Clean">

    <!-- Use $(Property Name) to reference a property -->
    <Message Text="#################################################################################" Importance="high" />
    <Message Text="MSBuildProjectName: $(MSBuildProjectName)" Importance="high" />
    <Message Text="IsClientLibrary: $(IsClientLibrary)" Importance="high" />
    <Message Text="IsTestProject: $(IsTestProject)" Importance="high" />
    <Message Text="IsTestSupportProject: $(IsTestSupportProject)" Importance="high" />
    <Message Text="IsDataPlaneProject: $(IsDataPlaneProject)" Importance="high" />
    <Message Text="IsMgmtClientLibrary: $(IsMgmtClientLibrary)" Importance="high" />
    <Message Text="IsSamplesProject: $(IsSamplesProject)" Importance="high" />
    <Message Text="IsShippingClientLibrary: $(IsShippingClientLibrary)" Importance="high" />
    <Message Text="EnableStyleCopAnalyzers: $(EnableStyleCopAnalyzers)" Importance="high" />
    <Message Text="SupportsNetStandard20: $(SupportsNetStandard20)" Importance="high" />
    <Message Text="#################################################################################" Importance="high" />
  </Target>
</Project>

{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "The base resource name."
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "The tenant ID to which the application and resources belong."
            }
        },
        "testApplicationOid": {
            "type": "string",
            "metadata": {
                "description": "The client OID to grant access to test resources."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the resource. By default, this is the same as the resource group."
            }
        }
    },
    "variables": {
        "apiVersion": "2019-05-01",
        "endpointValue": "[format('https://{0}.azurecr.io', parameters('baseName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "[variables('apiVersion')]",
            "name": "[parameters('baseName')]",
            "location": "[parameters('location')]",
            "properties": {        
                "endpoint": "[variables('endpointValue')]",
                "adminUserEnabled": true
            },
            "sku": {
                "name": "Basic",
                "tier": "Basic"
            }
        }
    ],
    "outputs": {
        "CONTAINERREGISTRY_REGISTRY_NAME": {
            "type": "string",
            "value": "[parameters('baseName')]"
        },
        "CONTAINERREGISTRY_ENDPOINT": {
            "type": "string",
            "value": "[variables('endpointValue')]"
        },
        "CONTAINERREGISTRY_USERNAME": {
            "type": "string",
            "value": "[listCredentials(parameters('baseName'), variables('apiVersion')).username]"
        },
        "CONTAINERREGISTRY_PASSWORD": {
            "type": "string",
            "value": "[listCredentials(parameters('baseName'), variables('apiVersion')).passwords[0].value]"
        }
    }
}

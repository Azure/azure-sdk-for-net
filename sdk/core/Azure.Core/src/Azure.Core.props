<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AzureCoreSharedSources>$(MSBuildThisFileDirectory)\Shared\</AzureCoreSharedSources>
  </PropertyGroup>

  <!-- Project references -->
  <ItemGroup Condition="'$(UseProjectReferenceToAzureCore)'=='true'">
    <ProjectReference Include="$(MSBuildThisFileDirectory)Azure.Core.csproj" />
  </ItemGroup>

  <!-- Package references -->
  <ItemGroup Condition="'$(UseProjectReferenceToAzureCore)'!='true'">
    <PackageReference Include="Azure.Core" />
  </ItemGroup>

  <!-- Nullability -->
  <PropertyGroup Condition="'$(UseAzureCoreNullableAttributes)'=='true'">
    <DefineConstants>$(DefineConstants);AZURE_NULLABLE</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition="'$(UseAzureCoreNullableAttributes)'=='true'">
    <Compile Include="$(AzureCoreSharedSources)NullableAttributes.cs" />
  </ItemGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Test framework for clients built on System.ClientModel</Description>
    <Version>1.0.0-beta.1</Version>
    <PackageTags>Microsoft.ClientModel.TestFramework</PackageTags>
    <RequiredTargetFrameworks>net462;net8.0;net9.0</RequiredTargetFrameworks>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <NoWarn>AZC0015;AZC0007</NoWarn>
		<IsTestProject>false</IsTestProject>
    <IncludeAutorestDependency>false</IncludeAutorestDependency>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" />
    <PackageReference Include="NUnit" VersionOverride="4.4.0" />
    <PackageReference Include="System.ClientModel" /> 
    <PackageReference Include="System.Security.Cryptography.ProtectedData" />
  </ItemGroup>

	<ItemGroup>
		<Compile Include="$(MSBuildThisFileDirectory)/../../System.ClientModel/src/Internal/ContentTypeUtilities.cs" LinkBase="Shared\Core" />
	</ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>TestProxyPath</_Parameter1>
      <_Parameter2>$(NuGetPackageRoot)\azure.sdk.tools.testproxy\$(TestProxyVersion)\tools\net8.0\any\Azure.Sdk.Tools.TestProxy.dll</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>
</Project>

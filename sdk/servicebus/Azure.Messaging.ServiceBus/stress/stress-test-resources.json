    "sessionQueueName": "[format('stresstestsbsess-{0}', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2022-01-01-preview",
      "name": "[variables('servicebusNamespaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "2022-01-01-preview",
      "name": "[format('{0}/{1}', variables('servicebusNamespaceName'), variables('queueName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', variables('servicebusNamespaceName'))]"
      ]
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "2022-01-01-preview",
      "name": "[format('{0}/{1}', variables('servicebusNamespaceName'), variables('sessionQueueName'))]",
      "properties": {
        "requiresSession": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', variables('servicebusNamespaceName'))]"

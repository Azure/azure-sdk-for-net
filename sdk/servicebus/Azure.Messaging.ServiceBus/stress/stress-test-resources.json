    "STRESS_SERVICEBUS_NAMESPACE_CONNECTION_STRING": {
      "type": "string",
      "value": "[listkeys(variables('serviceBusAuthRuleResourceId'), '2015-08-01').primaryConnectionString]"
    },
    "STRESS_SERVICEBUS_QUEUE": {
      "type": "string",
      "value": "[variables('queueName')]"
    },
    "STRESS_SERVICEBUS_SESSION_QUEUE": {
      "type": "string",
      "value": "[variables('sessionQueueName')]"
    }

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "@odata.type": {
          "type": "string",
          "enum": [ "microsoft.graph.onTokenIssuanceStartResponseData" ]
        },
        "actions": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "ProvideClaimsForToken" ]
              }
            },
            "allOf": [
              {
                "anyOf": [
                  {
                    "not": {
                      "properties": { "type": { "enum": [ "ProvideClaimsForToken" ] } }
                    }
                  },
                  {
                    "properties": { "claims": { "$ref": "#/definitions/claimsForToken" } },
                    "required": [ "claims" ]
                  }
                ]
              }
            ],
            "required": [
              "type"
            ]
          }
        }
      },
      "required": [
        "@odata.type",
        "actions"
      ]
    }
  },
  "required": [
    "data"
  ],
  "definitions": {

    "claimsForToken": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/claim"
      }
    },

    "claim": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        }
      },
      "required": [
        "id",
        "value"
      ]
    }
  }
}
    <PackageReference Update="Microsoft.CodeAnalysis.NetAnalyzers" Version="8.0.0-preview1.23165.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="SauceControl.InheritDoc" Version="1.3.0" />
  </ItemGroup>


<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Azure Batch test common library</Description>
    <!--After fixing all warnings, enable this option-->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <AssemblyTitle>Microsoft Azure Batch Common Tests</AssemblyTitle>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Stop .NET 10 from flagging the transitive System.Runtime.InteropServices, as it cannot be pruned. -->
    <NoWarn>$(NoWarn);NU1510</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <!-- TODO: Correct this back to $(SdkTargetFx) once management plane is updated to support net461 and netstandard2.0 -->
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.Management.Batch" />
    <!-- Legacy ADAL version scoped in eng/Packages.Data.props -->
    <PackageReference Include="Microsoft.IdentityModel.Clients.ActiveDirectory" />
  </ItemGroup>
</Project>

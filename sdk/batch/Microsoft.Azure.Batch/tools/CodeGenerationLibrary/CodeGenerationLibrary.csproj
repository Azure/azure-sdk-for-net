<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Azure Batch object model code generation library</Description>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>$(BatchToolsTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == '$(BatchToolsRunnableFramework)'">
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != '$(BatchToolsRunnableFramework)'">
    <Compile Remove="**\*.cs" />
  </ItemGroup>

  <Target Name="WarnNonNetFrameworkBuild" BeforeTargets="CoreCompile" Condition="'$(TargetFramework)' != '$(BatchToolsRunnableFramework)'">
    <Message Text="CodeGenerationLibrary only works on .NET Framework. This $(TargetFramework) build produces an empty assembly." />
  </Target>
</Project>

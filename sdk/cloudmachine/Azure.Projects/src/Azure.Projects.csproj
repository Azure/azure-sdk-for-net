<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Azure.Projects simplifies getting started with Azure in .NET.</Description>
    <Version>1.0.0-beta.2</Version>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
    <LangVersion>12</LangVersion>

    <!-- Disable warning CS1591: Missing XML comment for publicly visible type or member -->
    <NoWarn>CS1591</NoWarn>
    <NoWarn>OPENAI001</NoWarn>
    <NoWarn>AZC0007</NoWarn>
    <AotCompatOptOut>true</AotCompatOptOut>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Data.AppConfiguration" />
    <PackageReference Include="Azure.Core" />
    <PackageReference Include="Azure.Identity" />
    <PackageReference Include="Azure.Messaging.ServiceBus" />
    <PackageReference Include="Azure.Messaging.EventGrid" />
    <PackageReference Include="Azure.Storage.Blobs" />
    <PackageReference Include="Azure.Security.KeyVault.Secrets" />
    <PackageReference Include="Azure.AI.Projects" />
    <PackageReference Include="Azure.AI.OpenAI" />
    <PackageReference Include="Azure.AI.Inference" />
    <PackageReference Include="Azure.Search.Documents" />
    <PackageReference Include="System.Memory.Data" />
    <PackageReference Include="System.ClientModel" />
  </ItemGroup>

</Project>

                "kind"
            ],
            "discriminator": "kind",
            "properties": {
                "eTag": {
                    "readOnly": true,
                    "type": "string",
                    "description": "An HTTP ETag"
                },
                "name": {
                    "readOnly": true,
                    "type": "string",
                    "description": "The name of the compute node"
                },
                "kind": {
                    "type": "string"
                }
            }
        },
        "LinuxComputeNode": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/ComputeNode"
                }
            ],

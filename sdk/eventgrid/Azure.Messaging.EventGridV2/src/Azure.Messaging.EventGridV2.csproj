<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>This is the EventGridV2 client library for developing .NET applications with rich experience.</Description>
    <AssemblyTitle>Azure SDK Code Generation EventGridV2 for Azure Data Plane</AssemblyTitle>
    <Version>1.0.0-beta.1</Version>
    <PackageTags>Azure EventGridV2</PackageTags>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
    <IncludeOperationsSharedSource>true</IncludeOperationsSharedSource>
    <IncludeGeneratorSharedCode>true</IncludeGeneratorSharedCode>
    <GenerateApiListing>false</GenerateApiListing>
    <IsShippingClientLibrary>false</IsShippingClientLibrary>
  </PropertyGroup>

  <!-- Shared source from Azure.Core -->
  <ItemGroup>
    <Compile Include="$(AzureCoreSharedSources)ArrayBufferWriter.cs" LinkBase="Shared" />
    <Compile Include="$(AzureCoreSharedSources)AzureResourceProviderNamespaceAttribute.cs" LinkBase="Shared" />
    <Compile Include="$(AzureCoreSharedSources)AzureKeyCredentialPolicy.cs" LinkBase="Shared" />
    <Compile Remove="Generated\AzureMessagingEventGridClientBuilderExtensions.cs" />
    <Compile Remove="Generated\AzureMessagingEventGridClient.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Azure.Core" />
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\core\Azure.Core\src\Azure.Core.csproj" />
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetPathOfFileAbove('AzSdk.test.reference.props'))" />
  <PropertyGroup>
    <PackageId>Microsoft.Azure.KeyVault.Extensions.Tests</PackageId>

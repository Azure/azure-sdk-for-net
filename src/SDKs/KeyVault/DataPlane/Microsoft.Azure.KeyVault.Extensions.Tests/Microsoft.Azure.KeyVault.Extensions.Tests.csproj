    <Version>1.0.0</Version>
    <AssemblyName>Microsoft.Azure.KeyVault.Extensions.Tests</AssemblyName>    
  </PropertyGroup>
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>

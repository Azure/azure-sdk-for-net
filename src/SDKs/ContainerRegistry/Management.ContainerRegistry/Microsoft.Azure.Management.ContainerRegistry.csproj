<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetPathOfFileAbove('AzSdk.reference.props'))" />
  <PropertyGroup>
    <PackageId>Microsoft.Azure.Management.ContainerRegistry</PackageId>
    <Description>Provides management capabilities for Azure Container Registry.</Description>
    <VersionPrefix>2.0.0</VersionPrefix>
    <AssemblyName>Microsoft.Azure.Management.ContainerRegistry</AssemblyName>
    <PackageTags>Microsoft Azure Container Registry;Container Registry;REST HTTP client;windowsazureofficial;netcore451511</PackageTags>
    <PackageReleaseNotes>
      <![CDATA[
        1) Added support for managed registries that can be created with Basic, Standard, Premium SKU.
        2) Bring your own storage registries can still be created with Classic SKU.
        3) Added support for webhooks and replications.
      ]]>
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net452;netstandard1.4</TargetFrameworks>
  </PropertyGroup>
</Project>

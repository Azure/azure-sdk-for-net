<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<UsingTask TaskName="GetBuildTools" AssemblyFile="taskBinaries\Microsoft.Azure.Build.BootstrapTasks.dll" />
	
  <Target Name="GetLatestBuildTools">
	  <GetBuildTools LocalBranchRootDir="$(LibraryRoot)" RemoteRootDir="$(RemoteRootDir)" UseLatest="$(UseLatest)" DebugTrace="$(DebugTrace)" WhatIf="$(WhatIf)" OverrideLocal="$(OverrideLocal)" />
  </Target>
  
  <Target Name="Init" DependsOnTargets="GetLatestBuildTools">
	  <Message Importance="high" Text="Build tools have been updated." />
    <Message Importance="high" Text="Please execute msbuild build.proj /t:init to explicitly update build tools using legacy toolset."/>
    <Message Importance="high" Text="In new tool set, you don't have to update tools explicitly, it get's downloaded implicitly."/>
    <Message Importance="high" Text="If you ever have to reinstall build tools, simply delete <root>\restoredPackages\microsoft.internal.netsdkbuild.mgmt.tools and execute your desired target (e.g. msbuild build.proj /t:Build), build tools will get downloaded."/>
  </Target>
</Project>
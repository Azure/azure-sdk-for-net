<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>    
    <PackageOutputPath>$(OutputPath)</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <SdkSampleAssemblyName>SdkInfoSample</SdkSampleAssemblyName>
    <PackageTags>TestPackage;$(AdditionalVersionTags)</PackageTags>
  </PropertyGroup>
  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <!--<GenerateRuntimeConfigurationFiles>false</GenerateRuntimeConfigurationFiles>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <GenerateAssemblyDescriptionAttribute>false</GenerateAssemblyDescriptionAttribute>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyFileInformationalAttribute>false</GenerateAssemblyFileInformationalAttribute>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GenerateAssemblyCopyrightAttribute>false</GenerateAssemblyCopyrightAttribute>-->
  </PropertyGroup>

  <PropertyGroup Condition=" '$(AfterBuild)' != 'true' ">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup Condition=" '$(AfterBuild)' != 'true' ">
    <PackageReference Include="Microsoft.Build" Version="15.7.179" />
    <PackageReference Include="Microsoft.Build.Framework" Version="15.7.179" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="15.7.179" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.7.179" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.6.0" />
    <PackageReference Include="System.Collections.Immutable" Version="1.3.1" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.5.24" />
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.3.1" />
    <PackageReference Include="NuGet.Packaging" Version="[4.4.0, 5.0.0)" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(AfterBuild)' != 'true' ">
    <ProjectReference Include="..\..\SdkBuildTasks\Microsoft.Azure.Sdk.Build.Tasks.csproj" />
    <ProjectReference Include="..\..\BootstrapTasks\Microsoft.Azure.Build.BootstrapTasks.csproj" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(AfterBuild)' == 'true' ">
    <Compile Include="TestData\SdkInfoSamples\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="BootStrapperTestResources\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup Condition=" '$(AfterBuild)' != 'true' ">
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>
  
  <!--<ItemGroup>
    <Folder Include="TestData\SigningManifests\" />
  </ItemGroup>-->
  
  <ItemGroup Condition=" '$(AfterBuild)' != 'true' ">
    <None Update="TestData\**\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    
    <!--<None Update="TestData\PublishedNugets\Microsoft.Azure.Management.Compute.18.0.0.nupkg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="TestData\PublishedNugets\Microsoft.Azure.Management.Compute.18.0.0.symbols.nupkg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="TestData\SigningManifests\SingleFileSignRequestManifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>-->
  </ItemGroup>

  <Target Name="BuildCmdletModule" BeforeTargets="Build" Condition="'$(AfterBuild)' != 'true'">
    <MSBuild Projects="$(MSBuildProjectFullPath)" BuildInParallel="true" Properties="EnableDefaultCompileItems=false;AfterBuild=true;AssemblyName=$(SdkSampleAssemblyName);OutputType=Library;IntermediateOutputPath=$(IntermediateOutputPath)sdkInfoSam\" />
    <!--;DocumentationFile=$(OutputPath)$(TestCmdletModuleAssemblyName).dll-help.xml -->
  </Target>
</Project>